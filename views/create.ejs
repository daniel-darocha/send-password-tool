<%- include('partials/header') -%> 

<div class="container my-5" >
    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow bg-dark" id="homeBox1">
      <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
        <h1 class="display-5 fw-bold lh-1">PASS PASS. <br> A <%=companyName %> Tool.</h1>
        <p class="lead">Please input the password you would like to send.</p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
            <form action="/sendpass-generate" method="post">
                <div class="input-group mb-3">
                    <input type="text" autocorrect="off" autocapitalize="none" autocomplete="off" class="form-control" placeholder="Password Here" aria-label="Recipient's username" aria-describedby="button-addon2" name="pw">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Send</button>
                  </div>
                <div id="passwordHelpBlock" class="form-text">
                    We recommend that your password should be 8-20 characters long, contain letters and numbers, and should not contain spaces, special characters, or emojis.
                </div>


            </form>
        </div>
      </div>
      <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
         
      </div>
    </div>
  </div>

<%- include('partials/footer') -%> 
